  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "elric Current File",
      "program": "${workspaceFolder}/node_modules/.bin/elric",
      "args": ["${fileBasenameNoExtension}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/elric/bin/elric"
      }
    }
  ]
}
