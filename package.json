    "@babel/register": "^7.0.0",
    "@crowdin/cli": "^3.5.2",
    "@elric/globals": "workspace:*",
    "@elric/test-utils": "workspace:*",
    "@tsconfig/node10": "^1.0.8",
    "@types/babel__core": "^7.0.0",
    "@types/babel__generator": "^7.0.0",
